{% extends '_templates/base.njk' %}

{% block page_title %}Recs{% endblock %}

{% block page_description %}A list of places I ate at and recommend in Japan.{% endblock %}

{% block content %}
<article class="container">
  <h1>Recommendations on where to eat in Tokyo</h1>
  <p>Some places I ate at and recommend during my study abroad in Tokyo, Japan!</p>  <div class="row row-cols-1 row-cols-md-2 g-4">
    {% for item in recs.recs %}
    <div class="col">
      <div class="card">
        <img src="img/{{ item.img }}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{ item.name }}</h5>
          <p class="card-text">{{ item.blurb }}</p>
        </div>
        <div class="card-footer">
          <a href="{{ item.source }}" class="card-link">Reviews</a>
       </div>
      </div>
    </div>
    {% endfor %}
  </div>
</article>
{% endblock %}